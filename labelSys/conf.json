{
    //This is a template configuration file for labelSys
    "Labels":{
        /*
        Labels defines label types, avaliable attributes:
        - color: Preview color [default: [255, 0, 0]]
        - mode:
            0 - close contour; [default]
            1 - open contour
        - draw: draw / point(click) mode to initialize contour
            0 - point mode;
            1 - draw mode [default]
        - label_step: contour resample step size, 
                only work in draw mode [default : 1]
        */
        "Label1" :{
            "color": [0.0, 1.0, 1.0],
            "mode": 0,
            "draw": 1,
            "label_step":1
        },
        "Label2" :{
            "color": [1.0, 1.0, 0.0], 
            "mode": 1,
            "draw": 0
        },
        "Label3" :{ }
    },
    "Classifications":{
        /*
        Classifications defines image level classification
        */
        "Class0":{
            "full_name": "Image quality",
            "class": ["Good", "fair"],
            "description": "This is a image classification"
        },
        "Class1":{
            "full_name": "Image size",
            "class": ["Large", "small"],
            "description": "This is a image classification"
        }
    },
    // Loading mode: 0: DICOM; 1: Image; 2: Video
    "Loading_mode": 1,

    // 2D Preview magification (float number), no need to change it
    "2D_preview_mag":1,

    // Default_series will be chosen on changing patients; 
    // Only work on DICOM files with "SeriesDiscription [0x0020, 0x0011]" entry
    // set to "" to not trigger series change on changing slices
    "Default_series":"SAG PD",

    // Default_label will be chosen on changing slices; 
    // set to "" to not trigger label change on changing slices
    "Default_label":"",

    // Any image with hight more than Max_im_height will be resized to Max_im_height
    // Set to -1 to not impose image resizing
    "Max_im_height":1024
}

